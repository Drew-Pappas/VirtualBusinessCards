<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingsActivity">

    <TextView
        android:id="@+id/textViewSettings"
        android:layout_width="288dp"
        android:layout_height="43dp"
        android:text="Select whether to make the following visable to other users"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/textViewEmailSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="126dp" />

    <TextView
        android:id="@+id/textViewPhoneSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        android:id="@+id/textViewLocationSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="249dp" />

    <TextView
        android:id="@+id/textViewOrgSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organization/Company"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="323dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="302dp"
        tools:layout_editor_absoluteY="133dp" />

    <Switch
        android:id="@+id/switchEmailSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="126dp" />

    <Switch
        android:id="@+id/switchPhoneSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="176dp" />

    <Switch
        android:id="@+id/switchLocationSettings"
        android:layout_width="84dp"
        android:layout_height="21dp"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="247dp" />

    <Switch
        android:id="@+id/switchOrgSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="315dp" />

</androidx.constraintlayout.widget.ConstraintLayout>